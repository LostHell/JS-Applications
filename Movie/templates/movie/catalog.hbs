{{>header}}
<div id="cinema">
    <h1>All Movies</h1>
    <form action="" method="GET">
        <label>Search genre:</label>
        <input type="text" name="search">
        <input type="submit" value="Search">
    </form>
    <div class="movies">
        {{#each movies}}
            <div class="movie">
                <h2>Title: {{title}}</h2>
                <img
                        src="{{image}}">
                <p>Available Tickets: {{tickets}}</p><button><a href="#">Buy Ticket</a></button>
                <button><a href="#">Details</a></button>
            </div>
        {{/each}}
    </div>
</div>
{{>footer}}